<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <div class="infoBox">
          <%= render 'shared/user_info' %>
        </div>
      </section>
      <section class="post_form">
        <h3>New Post</h3>
        <br>
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Post Feed</h3>
      <br>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <h1>Welcome!</h1>
  <%= link_to "Sign Up!", signup_path, class: "btn btn-lg btn-secondary" %>
  <%= link_to "Log in", login_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "Search", search_path, class: "btn btn-lg btn-primary" %>

  <%= link_to image_tag("rails.png", alt: "Rails logo"),
              'http://rubyonrails.org/' %>
<% end %>