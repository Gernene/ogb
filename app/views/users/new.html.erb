<% provide(:title, 'Sign up') %>
<% provide(:button_text, 'Sign Up!') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: @user %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :account_type %><br>
      <div class="inline"></div>
      <%= f.label :account_type, "Volunteer", :value => "volunteer" %>
      <%= f.radio_button :account_type, "volunteer", :checked => true %>
      <%= f.label :account_type, "Organization", :value => "organization" %>
      <%= f.radio_button :account_type, "organization" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
